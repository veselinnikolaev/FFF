@model FFF.Models.Event

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Delete Event</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h3 class="text-danger">Are you sure you want to delete this?</h3>
            <dl class="row">
                <dt class="col-sm-2">Date:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Date)</dd>
                <dt class="col-sm-2">Singer Name:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.SingerName)</dd>
                <dt class="col-sm-2">Ticket Price:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.TicketPrice)</dd>
                <dt class="col-sm-2">Description:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button> |
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>
