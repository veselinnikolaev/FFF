@model FFF.Models.Event

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">Event Details</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <dl class="row">
                <dt class="col-sm-2">Date:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Date)</dd>
                <dt class="col-sm-2">Singer Name:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.SingerName)</dd>
                <dt class="col-sm-2">Ticket Price:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.TicketPrice)</dd>
                <dt class="col-sm-2">Description:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>
            </dl>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a> |
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
