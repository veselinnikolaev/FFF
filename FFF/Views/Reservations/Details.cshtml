@model FFF.Models.Reservation

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">Reservation Details</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <dl class="row">
                <dt class="col-sm-2">Name:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
                <dt class="col-sm-2">Phone Number:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.PhoneNumber)</dd>
                <dt class="col-sm-2">Note:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Note)</dd>
                <dt class="col-sm-2">Event:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Event.Description)</dd>
            </dl>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a> |
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
