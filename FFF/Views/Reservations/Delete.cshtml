@model FFF.Models.Reservation

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Delete Reservation</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h3 class="text-danger">Are you sure you want to delete this?</h3>
            <dl class="row">
                <dt class="col-sm-2">Name:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
                <dt class="col-sm-2">Phone Number:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.PhoneNumber)</dd>
                <dt class="col-sm-2">Note:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Note)</dd>
                <dt class="col-sm-2">Event:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Event.Description)</dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button> |
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>
