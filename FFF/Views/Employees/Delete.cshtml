@model FFF.Models.Employee

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Delete Employee</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h3 class="text-danger">Are you sure you want to delete this?</h3>
            <dl class="row">
                <dt class="col-sm-2">First Name:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.FirstName)</dd>
                <dt class="col-sm-2">Last Name:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.LastName)</dd>
                <dt class="col-sm-2">Birth Date:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.BirthDate)</dd>
                <dt class="col-sm-2">Position:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Position)</dd>
                <dt class="col-sm-2">Phone Number:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.PhoneNumber)</dd>
                <dt class="col-sm-2">Email:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button> |
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>
