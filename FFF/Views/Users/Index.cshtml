@model IEnumerable<User>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email.Substring(0, 3) + new string('*', 5) + model.Email.Substring(model.Email.IndexOf('@')))
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber.Substring(0, 3) + new string('*', 5))
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email.Substring(0, 3) + new string('*', 5) + item.Email.Substring(item.Email.IndexOf('@')))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber.Substring(0, 3) + new string('*', 5))
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
